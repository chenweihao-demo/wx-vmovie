/* 加载 */
van-overlay .wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

/* 简介 */
.brief-introduction {
  width: 100%;
  text-align: center;
  padding: 30px 10px;
  box-sizing: border-box;
  position: relative;
}

.brief-introduction::before {
  position: absolute;
  z-index: 2;
  content: "";
  top: 0;
  left: 0;
  width: 300%;
  height: 300%;
  pointer-events: none;
  box-sizing: border-box;
  transform-origin: top left;
  border: 0 solid rgba(0, 0, 0, 0.1);
  transform: scale(0.333333);
  border-bottom: 1px solid rgba(153, 92, 92, 0.3);
  transform: scale(0.333333);
}

.brief-introduction .title {
  font-weight: 600;
  margin: 0px 0 15px;
}

.brief-introduction .info {
  font-size: 10px;
  color: #8c8a8a;
}

.brief-introduction .content {
  font-size: 12px;
  line-height: 26px;
  padding: 20px 0px;
  text-align: justify;
}

.brief-introduction .more {
  font-size: 12px;
  color: rgb(101, 189, 249);
}

/* 发布者 */
.author {
  width: 100%;
  padding: 10px 10px;
  box-sizing: border-box;
  position: relative;
  display: flex;
}

.author::before {
  position: absolute;
  z-index: 2;
  content: "";
  top: 0;
  left: 0;
  width: 300%;
  height: 300%;
  pointer-events: none;
  box-sizing: border-box;
  transform-origin: top left;
  border: 0 solid rgba(0, 0, 0, 0.1);
  transform: scale(0.333333);
  border-bottom: 1px solid rgba(153, 92, 92, 0.3);
  transform: scale(0.333333);
}

.author .pic {
  border-radius: 50%;
  /* border: 1px solid rgba(0, 0, 0, 0.3); */
  width: 40px;
  height: 40px;
  overflow: hidden;
  margin-right: 8px;
  position: relative;
}
.author .pic::before{
  position: absolute;
  z-index: 2;
  content: "";
  top: 0;
  left: 0;
  width: 300%;
  height: 300%;
  border-radius: 50%;
  pointer-events: none;
  box-sizing: border-box;
  transform-origin: top left;
  border: 1px solid rgba(0, 0, 0, 0.3);
  transform: scale(0.333333);
}
.author .pic image {
  width: 100%;
}

.author .author-info {
  flex: 1;
}

.author .author-info .name {
  font-size: 14px;
  font-weight: 600;
  padding-bottom: 10px;

}

.author .author-info .occupation {
  font-size: 10px;
  color: #8c8a8a;
}

.author .icon-more {
  width: 16px;
  height: 16px;
  margin-top: 15px;
}

