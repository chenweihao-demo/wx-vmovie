.scroll-view_H {
  white-space: nowrap;
}

.scroll-view_H .card {
  display: inline-block;
  width: 40%;
  margin-right: 15px;
  position: relative;
}

.scroll-view_H .card image {
  width: 100%;
}

.scroll-view_H .card .content {
  position: absolute;
  left: 0;
  bottom: 0px;
  padding: 8px;
  width: 100%;
  box-sizing: border-box;

}

.scroll-view_H .card .content .time {
  font-size: 10px;
  color: white;
  margin-bottom: 8px;
}

.scroll-view_H .card .content .title {
  font-size: 10px;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: normal;
}

